@model int
@{
    ViewData["Title"] = "Home Page";
    var UserID = ViewData["UserID"];
    var products = ViewData["Products"] as List<st10275468_CLDV6211_POE_ThomasK.Models.Products>;

}
<!DOCTYPE html>
<title>Home Page</title>
<style>
    body {
        position: center;
        background-image: url("/Images/Homebackground.webp");
        background-size: 100% 100vh;
        background-repeat: no-repeat;
    }

    h1 {
        text-align: center;
        padding-top: 20px;
        font-size: 50px;
    }

    .p1 {
        text-align: left;
        font-size: 30px;
        margin-left: 400px;
        margin-right: 200px;
        padding-top: 50px;
    }

    p {
        text-align: center;
        color: black;
        font-size: 20px;
    }
</style>

<html>

<body>

    @if (UserID != null)
    {
        <p>User ID: @UserID</p>
    }

    <h1><b>KhumaloCraft Emporium</b></h1>
    
    
    <p><em>Shop the Finest Handcrafted Goods</em></p>
    <p class="p1">Explore our latest handcrafted products now and get 10% off of your first purchase.</p>
   
</body>
<h2>All Products</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Catagory</th>
            <th>Availability</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in products)
        {
          <tr>
              <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Catagory</td>
                <td>@product.Availability</td>
                <td>
                    <form asp-controller="Transaction" asp-action="PlaceOrder" method="post">
                     <input type="hidden" name="UserID" value="@UserID"/>
                     <input type="hidden" name="ProductID" value="@product.ProductID"/>
                     <button type="sumbit">Place Order</button>
                    </form>
                </td>
          </tr> 
        }


    </tbody>
</table>

</html>



